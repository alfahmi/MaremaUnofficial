<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="windowActionBar">false</item>
        <item name="colorAccent">@color/warnaAksen</item>
		<item name="colorPrimary">@color/warnaUtama</item>
		<item name="colorPrimaryDark">@color/warnaUtama</item>
		<item name="android:windowBackground">@color/warnaLatar</item>
    </style>
	<style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/warnaAksen</item>
		<item name="colorPrimary">@color/warnaUtama</item>
		<item name="android:windowBackground">@color/warnaLatar</item>
    </style>
	<style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
		<item name="colorButtonNormal">?attr/colorPrimary</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
</resources>
